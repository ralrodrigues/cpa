= form_for([@curso, @disciplina], html: { class: 'form-horizontal' }) do |f| 
  = render 'shared/error_messages', object: f.object
  .form-group
    = f.label :nome, :class => "col-sm-4 control-label"
    .col-sm-8
      = f.text_field :nome, :class => "form-control", :required => true
  .form-group
    = f.label :sigla, :class => "col-sm-4 control-label"
    .col-sm-8
      = f.text_field :sigla, :class => "form-control", :required => true
  .form-group
    = f.label :qtd_professores, "Qtd. Professor", :class => "col-sm-4 control-label"
    .col-sm-8
      = f.number_field :qtd_professores, :class => "form-control", :required => true, :pattern => "\d*"
  .form-group
    .col-sm-offset-4.col-sm-8  
      = f.submit button, :class => "btn btn-success"

