<!DOCTYPE html>
%html
	%head
		%title= content_for?(:title) ? yield(:title) : "CPA"
		%meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
		%meta{:content => content_for?(:description) ? yield(:description) : "CPA", :name => "descrição"}
		= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
		= javascript_include_tag "application", "data-turbolinks-track" => true 
		= csrf_meta_tags 
		= yield(:head)
	%body
		.container
			= render 'layouts/header'
			.row
				.col-sm-offset-2.col-sm-6.text-center{:style => "z-index:1;", :data =>{ :spy =>"affix"}}
					- if notice 
						%p.alert.alert-info= notice 
			= yield 
			= render 'layouts/footer'

			- if logado?
				= current_usuario.nome
				= link_to "Sair", logout_path, method: "delete"
			- else
				= link_to "Login", login_path