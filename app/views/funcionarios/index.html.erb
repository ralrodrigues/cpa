<h2>Funcionários</h2>

<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<% @areas.each do |area| %>
<h3><%=area.nome%></h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Prontuário</th>
        <th>E-Mail</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% area.funcionarios.each do |funcionario| %>   
        <tr>
          <td><%= funcionario.nome %></td>
          <td><%= funcionario.prontuario %></td>
          <td><%= funcionario.email %></td>
          <td><%= link_to 'Editar', edit_funcionario_path(funcionario) %></td>
          <td><%= link_to 'Deletar', funcionario, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Novo Funcionário', new_area_funcionario_path(area), :class => "btn btn-primary" %>
<% end %>
<br>



<ul class="pager">

  <li class="previous">
    <%= link_to '← Voltar', questionario_areas_path(@questionario) %>
  </li>
  
  <li class="next">
    <%= link_to 'Avançar →', questionario_coordenadores_path(@questionario)%>
  </li>
</ul>